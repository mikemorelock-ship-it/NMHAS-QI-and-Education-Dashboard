# EMS Dashboard - Environment Variables
# Copy this file to .env and fill in your values.

# Database URL
# Local development (SQLite file):  file:./dev.db
# Production (Turso):               libsql://your-db-name.turso.io
DATABASE_URL="file:./dev.db"

# Turso auth token (required when DATABASE_URL is a libsql:// URL)
# TURSO_AUTH_TOKEN=""

# JWT secret for session signing — generate a strong one:
#   openssl rand -base64 48
JWT_SECRET="CHANGE_ME_TO_A_STRONG_RANDOM_SECRET"

# (Optional) Production site URL — used for CORS and CSRF origin validation
# NEXT_PUBLIC_SITE_URL="https://ems.example.com"

# (Optional) Enable filesystem polling for dev on network drives
# WATCHPACK_POLLING=true
