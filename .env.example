# EMS Dashboard - Environment Variables
# Copy this file to .env and fill in your values.

# Database URL
# Local development (SQLite file):  file:./dev.db
# Production (Turso):               libsql://your-db-name.turso.io
DATABASE_URL="file:./dev.db"

# Turso auth token (required when DATABASE_URL is a libsql:// URL)
# TURSO_AUTH_TOKEN=""

# JWT secret for session signing — generate a strong one:
#   openssl rand -base64 48
JWT_SECRET="CHANGE_ME_TO_A_STRONG_RANDOM_SECRET"

# (Optional) Production site URL — used for CORS and CSRF origin validation
# NEXT_PUBLIC_SITE_URL="https://ems.example.com"

# (Optional) SMTP email configuration for DOR notifications
# If not configured, email notifications are silently skipped.
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="notifications@example.com"
# SMTP_PASS="your-password"
# SMTP_FROM="NMH EMS Dashboard <notifications@example.com>"

# (Optional) Enable filesystem polling for dev on network drives
# WATCHPACK_POLLING=true

# (Optional) Anthropic API key for AI coaching activity generation
# Get one at https://console.anthropic.com/
# ANTHROPIC_API_KEY=""

# (Optional) Path for uploaded resource documents
# Defaults to ~/.local/ems-dashboard/resources/
# RESOURCE_STORAGE_PATH="C:/Users/you/.local/ems-dashboard/resources"
